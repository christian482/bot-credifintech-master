{
    "name": "botman/driver-facebook",
    "license": "MIT",
    "description": "Facebook Messenger driver for BotMan",
    "keywords": [
        "Bot",
        "BotMan",
        "Facebook Messenger",
        "Facebook",
        "Messenger"
    ],
    "post-install-cmd": [
     "php artisan clear-compiled",
     "php artisan optimize",
     "chmod -R 777 public/"
   ],
    "homepage": "http://github.com/botman/driver-facebook",
    "authors": [
        {
            "name": "Marcel Pociot",
            "email": "m.pociot@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "botman/botman": "~2.1|~3.0"
    },
    "require-dev": {
        "botman/studio-addons": "~1.0",
        "phpunit/phpunit": "~5.0",
        "illuminate/contracts": "~5.5.0",
        "mockery/mockery": "dev-master",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "BotMan\\Drivers\\Facebook\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs": "php-cs-fixer fix"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        },
        "laravel": {
            "providers": [
                "BotMan\\Drivers\\Facebook\\Providers\\FacebookServiceProvider"
            ]
        }
    }
}
